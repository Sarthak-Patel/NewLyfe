<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hackholyoke.skpatel.newlyfe.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/button"
            tools:text="Tasks"
            android:textSize="18sp"
            android:layout_weight="1" />

        <Button
            android:text="Quotes/Vids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/button2"
            android:textSize="18sp"
            android:elevation="0dp"
            android:contentDescription="Quotes and Vids"
            android:layout_weight="1" />

        <Button
            android:text="Evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/button3"
            android:textSize="18sp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Step"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp">

        <TextView
            android:text="First"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/First"
            tools:text="First"
            android:contentDescription="First"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:typeface="normal"
            android:textSize="36sp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginTop="69dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/Step"
            tools:text="Step"
            android:contentDescription="SecondParagraph"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textAlignment="center"
            android:layout_below="@+id/First"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="To A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:id="@+id/To A"
            tools:text="To A"
            android:contentDescription="Three"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_below="@+id/Step"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Successful"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:id="@+id/Successful"
            android:textColor="@android:color/white"
            tools:text="Successful"
            android:contentDescription="Four"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_below="@+id/To A"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/VariableTextView"
            android:textColor="@android:color/holo_red_dark"
            android:contentDescription="TimeofDay"
            android:textSize="36sp"
            android:textAlignment="center"
            android:layout_marginTop="88dp"
            android:layout_below="@+id/Successful"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

</RelativeLayout>
